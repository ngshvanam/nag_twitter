class PagesController < ApplicationController
def create_tweet
  if signed_in?
  	respond_to do |format|
   	 format.js
 	end
  else
  	redirect_to login_path
  end
end

def follow
  if signed_in?
	 respond_to do |format|
    format.js
  end
  else
		redirect_to login_path
  end
end

def home
	if signed_in?
		@title = "Twitter-Home"
	else
		redirect_to login_path
	end
end

def own
	if signed_in?
		@title ="Twitter-Own"
	else
		redirect_to login_path
	end
end

def profile
	if signed_in?
		@title ="Twitter-Profile"
	else
		redirect_to login_path
	end
end

end
